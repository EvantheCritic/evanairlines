@model EmployeeModel

<div class="container my-5">
    <div class="p-5 text-center bg-body-tertiary rounded-3">
        <img class="bi mt-4 mb-3" src="~/Images/@(Model.name).jpg" style="color: var(--bs-indigo); border-radius: 50%" width="100" height="100">
        <p>Employee Id number: @Model.id</p>
        <h1 class="text-body-emphasis">@Model.name</h1>
        <ul>
            <li style="text-decoration: none">Job: @Model.job</li>
            <li style="text-decoration: none">Experience Rating: @Model.experience/50</li>
            <li style="text-decoration: none">Hours: @Model.hours</li>
            <li style="text-decoration: none">Pay: @Model.pay</li>
        </ul>
    </div>
</div>


